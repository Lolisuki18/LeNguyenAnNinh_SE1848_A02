<Window x:Class="LeNguyenAnNinhWpfApp.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeNguyenAnNinhWpfApp"
        mc:Ignorable="d"
        Title="ProductDialog" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10">
            <TextBlock Text="Product Name:"/>
            <TextBox x:Name="txtProductName"/>

            <TextBlock Text="Supplier ID:"/>
            <TextBox x:Name="txtSupplierId"/>

            <TextBlock Text="Category ID:"/>
            <TextBox x:Name="txtCategoryId"/>

            <TextBlock Text="Quantity Per Unit:"/>
            <TextBox x:Name="txtQuantityPerUnit"/>

            <TextBlock Text="Unit Price:"/>
            <TextBox x:Name="txtUnitPrice"/>

            <TextBlock Text="Stock:"/>
            <TextBox x:Name="txtStock"/>

            <TextBlock Text="On Order:"/>
            <TextBox x:Name="txtOnOrder"/>

            <TextBlock Text="Reorder Level:"/>
            <TextBox x:Name="txtReorderLevel"/>

            <CheckBox x:Name="chkDiscontinued" Content="Discontinued"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Cancel" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
