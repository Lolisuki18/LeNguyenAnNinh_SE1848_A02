<UserControl x:Class="LeNguyenAnNinhWpfApp.EmployeeProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeNguyenAnNinhWpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Lê Nguyễn An Ninh - Employee -->
    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10" >
            <TextBlock Text="Employee ID:"/>
            <TextBox x:Name="txtEmployeeId" IsReadOnly="True" Background="#EEE"/>

            <TextBlock Text="Employee Name:"/>
            <TextBox x:Name="txtEmployeeName"/>

            <TextBlock Text="Username:"/>
            <TextBox x:Name="txtUserName"/>

            <TextBlock Text="Job Title:"/>
            <TextBox x:Name="txtJobTitle"/>

            <TextBlock Text="Birth Date:"/>
            <DatePicker x:Name="dpBirthDate"/>

            <TextBlock Text="Hire Date:"/>
            <DatePicker x:Name="dpHireDate"/>

            <TextBlock Text="Address:"/>
            <TextBox x:Name="txtAddress"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" >
            <Button Content="Save" Width="80" Click="BtnSave_Click"/>
            <Button Content="Cancel" Width="80"/>
        </StackPanel>
    </Grid>
</UserControl>
